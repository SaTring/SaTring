<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="7.998dp"
    android:layout_marginTop="15.998dp">

    <TextView
        android:id="@+id/message_other_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.998dp"
        android:paddingStart="7.998dp"
        android:paddingEnd="7.998dp"
        android:paddingTop="3.998dp"
        android:paddingBottom="3.998dp"
        android:visibility="gone"
        android:text="March 03"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/message_other_image_profile.image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15.998dp"
        android:contentDescription="User Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_other_text_date"/>

    <TextView
        android:id="@+id/message_other_text_user.name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7.998dp"
        android:text="LilJu"
        android:textSize="15.998dp"
        app:layout_constraintStart_toEndOf="@+id/message_other_image_profile.image"
        app:layout_constraintTop_toBottomOf="@id/message_other_text_date"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/message_other_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFC300"
        app:cardCornerRadius="12.2dp"
        app:cardElevation="0.00dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@id/message_other_image_profile.image"
        app:layout_constraintTop_toBottomOf="@id/message_other_text_user.name">

        <LinearLayout
            android:id="@+id/message_other_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_other_text_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7.998dp"
                android:maxWidth="259.998dp"
                android:paddingLeft="12.222dp"
                android:paddingTop="7.998dp"
                android:paddingRight="12.222dp"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="15.998dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/message_other_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:10"
        android:textColor="@color/black"
        android:textSize="9.99sp"
        app:layout_constraintBottom_toBottomOf="@id/message_other_card"
        app:layout_constraintStart_toEndOf="@id/message_other_card"/>

</android.support.constraint.ConstraintLayout>